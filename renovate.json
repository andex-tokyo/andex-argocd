{
  "extends": ["config:recommended"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/kubernetes/kustomization.yaml/"],
      "matchStrings": [
        "https://raw.githubusercontent.com/argoproj/argo-cd/(?<currentValue>[^/]+)/manifests/install.yaml"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "argoproj/argo-cd",
      "versioningTemplate": "semver"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/kubernetes/kustomization.yaml/"],
      "matchStrings": [
        "https://github.com/argoproj-labs/argocd-image-updater//manifests/base\\?ref=(?<currentValue>v[0-9.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "argoproj-labs/argocd-image-updater",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^(?<version>v0\\.\\d+\\.\\d+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/kubernetes/applications/sealed-secrets.yaml/"],
      "matchStrings": [
        "\"chart: sealed-secrets\\\\s+targetRevision: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "bitnami-labs/sealed-secrets",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^helm-v(?<version>\\d+\\.\\d+\\.\\d+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": ["/kubernetes/applications/cert-manager.yaml/"],
      "matchStrings": ["targetRevision: (?<currentValue>.*)"],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "cert-manager/cert-manager",
      "versioningTemplate": "semver",
      "extractVersionTemplate": "^v(?<version>\\d+\\.\\d+\\.\\d+)$"
    },
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/kubernetes/applications/kube-prometheus-stack.yaml/"
      ],
      "matchStrings": [
        "chart: kube-prometheus-stack\\s+repoURL: https://prometheus-community\\.github\\.io/helm-charts\\s+targetRevision: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "helm",
      "depNameTemplate": "kube-prometheus-stack",
      "registryUrlTemplate": "https://prometheus-community.github.io/helm-charts"
    }
  ],
  "assignees": ["andex-tokyo"]
}
